<div class="container d-flex justify-content-center">
  <div class="w-75 justify-content-center p-5">
      <div class="p-2 d-flex flex-column justify-content-center mb-3">
      <div class="align-self-center"><%=image_tag "logo.png", style:'height:200px; width:auto;' %></div>
      <div class="align-self-center"><h1 class="text-center mt-2">MUNÍCIPES</h1></div>
      <div class="align-self-center"><h2 class="text-center mt-2"><h2>Mudar sua senha</h2></h2></div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "Nova senha",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} caracteres mínimos" if @minimum_password_length),
                    input_html: { autocomplete: "nova senha" } %>
        <%= f.input :password_confirmation,
                    label: "Confirme sua nova senha",
                    required: true,
                    input_html: { autocomplete: "nova senha" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "MUDAR MINHA SENHA" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
