<div class="container d-flex justify-content-center">
  <div class="w-75 justify-content-center p-5">
      <div class="p-2 d-flex flex-column justify-content-center mb-3">
      <div class="align-self-center"><%=image_tag "logo.png", style:'height:200px; width:auto;' %></div>
      <div class="align-self-center"><h1 class="text-center mt-2">MUNÍCIPES</h1></div>
      <div class="align-self-center"><h2 class="text-center mt-2"><h2>Esqueceu sua senha?</h2></div>
    </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Me envie instruções de redefinição de senha" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>