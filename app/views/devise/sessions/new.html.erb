<div class="container d-flex justify-content-center">
  <div class="w-75 justify-content-center p-5">
    <div class="p-2 d-flex flex-column justify-content-center mb-3">
      <div class="align-self-center"><%=image_tag "logo.png", style:'height:200px; width:auto;' %></div>
      <div class="align-self-center"><h1 class="text-center mt-2">MUNÍCIPES</h1></div>
      <div class="align-self-center"><h2 class="text-center mt-2">Faça o seu login</h2></div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "senha" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>