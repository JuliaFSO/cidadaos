    <%= simple_form_for [@cidadao] do |f| %>
      <div class="form-inputs">
        <%= f.input :nome_completo,
                    placeholder: "Nome completo",
                    class: "form-completo",
                    label: "Nome completo",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "nome_completo" } %>
        <%= f.input :cpf,
                    class: "form-pequeno",
                    label: "CPF",
                    placeholder: "555.555.555-55",
                    required: true,
                    input_html: { autocomplete: "cpf" } %>
        <%= f.input :data_nascimento, as: :string ,
                    class: "form-pequeno",
                    label: "Data de Nascimento",
                    required: true,
                    input_html: { type: 'date', autocomplete: "data_nascimento" } %>
        <%= f.input :email,
                    label: "E-mail",
                    placeholder: "E-mail",
                    class: "form-completo",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :telefone,
                    label: "Telefone",
                    class: "form-pequeno",
                    placeholder: "+55-11-95555-5555",
                    required: true,
                    input_html: { autocomplete: "telefone" } %>
        <%= f.input :foto, as: :file, 
                    input_html: { class: 'd-none' }, 
                    label_html: { class: 'form-foto'},
                    label: 'Escolher foto' %>
      </div>
 
      <div class="form-actions">
        <%= f.button :submit, "Adicionar novo munÃ­cipe", class:"btn-home" %>
      </div>
    <% end %>