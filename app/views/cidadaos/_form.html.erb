    <%= simple_form_for @cidadao, url: url_path do |f| %>
      <div class="form-inputs">
        <%= f.input :nome_completo,
                    placeholder: "Nome completo",
                    class: "form-completo",
                    label: "Nome completo",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "nome_completo" } %>
        <%= f.input :cpf,
                    label: "CPF",
                    placeholder: "555.555.555-55",
                    required: true,
                    input_html: { autocomplete: "cpf", class:'cpf-masked' } %>
        <%= f.input :data_nascimento, as: :string ,
                    class: "form-pequeno",
                    label: "Data de Nascimento",
                    required: true,
                    input_html: { type: 'date', autocomplete: "data_nascimento" } %>
        <%= f.input :email,
                    label: "E-mail",
                    placeholder: "E-mail",
                    class: "form-completo",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :telefone,
                    label: "Telefone",
                    placeholder: "(00) 0000-0000",
                    required: true,
                    input_html: { autocomplete: "telefone", class:'telefone-masked'  } %>
        <%= f.input :foto, as: :file, 
                    label: 'Escolher foto' %>
        <%= f.input :status, as: :radio_buttons,
                    include_blank: false,
                    collection: [['Ativo', true], ['Inativo', false]] %>
      </div>

      <%= f.fields_for :endereco do |ff| %>
