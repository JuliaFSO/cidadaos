                      input_html: { autocomplete: "cep", class:'cep-masked cep' } %>
          <%= ff.input :logradouro,
                      id: "logradouro",
                      class: "form-completo",
                      label: "Logradouro",
                      placeholder: "Rua, Av., Trav.",
                      required: true,
                      input_html: { autocomplete: "logradouro" } %>
          <%= ff.input :complemento,
                      id: "complemento",
                      class: "form-pequeno",
                      label: "Complemento",
                      placeholder: "Apto., Bloco",
                      required: true,
                      input_html: { autocomplete: "complemento" } %>                      
          <%= ff.input :bairro ,
                      id: "bairro",
                      class: "form-pequeno",
                      label: "Bairro",
                      required: true,
                      input_html: { autocomplete: "bairro" } %>
          <%= ff.input :cidade,
                      id: "cidade",
                      label: "Cidade",
                      placeholder: "",
