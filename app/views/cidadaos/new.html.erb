<div class="container d-flex justify-content-center">
  <div class="justify-content-center p-5 w-75">
    <h2>Preencha seus dados</h2>
    <h5>Todos os campos abaixo são obrigatórios.</h5>
    <%= simple_form_for @cidadao do |f| %>
      <div class="form-inputs">
        <%= f.input :nome_completo,
                    label: "Nome Completo",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "nome_completo" } %>
        <%= f.telephone_field :cpf,
                    class: "form-number",
                    label: "CPF",
                    placeholder: "555.555.555-55",
                    required: true,
                    input_html: { autocomplete: "cpf" } %>
        <%= f.date_field :data_nascimento,
                    class: "form-number",
                    label: "Data de Nascimento",  
                    required: true,
                    input_html: { autocomplete: "data_nascimento" } %>
        <%= f.email_field :email,
                    label: "E-mail",
                    class: "form-control",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.telephone_field :telefone,
                    class: "form-number",
                    placeholder: "+55-11-95555-5555",
                    label: "Telefone",        
                    required: true,
                    input_html: { autocomplete: "telefone" } %>
        <%= f.input :foto, as: :file, 
                    input_html: { class: 'd-none' }, 
                    label_html: { class: 'form-foto'},
                    label: 'Escolher foto' %>
  
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Adicionar novo munícipe", class:"btn-home" %>
      </div>
    <% end %>

</div>