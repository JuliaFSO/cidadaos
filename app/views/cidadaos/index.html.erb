<div class="container">
  <div class="d-flex justify-content-around align-items-center mb-3">
    <div class="p-2"><%=image_tag "logo.png", style:'height:150px; width:auto;' %></div>
    <div class="p-2"><h1 class="text-center mt-2"><%= t('new.title') %></h1></div>
    <div class="p-2"></div>
  </div>
  <div class="card mb-3">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="true" href="/cidadaos/"><%= t('new.title') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cidadaos/new"><%= t('index.add_new') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cidadaos/"><%= t('index.search') %></a>
        </li>
      </ul>
    </div>
    <div class="card-body mb-3">
      <table class="table table-hover p-1 m-1">
        <thead>
          <tr class="bg-dark">
            <th class=" bg-dark text-white" scope="col"></th>
            <th class=" bg-dark text-white" scope="col"><%= t('show.nome_completo') %></th>
            <th class=" bg-dark text-white"scope="col"><%= t('show.cpf') %></th>
            <th class=" bg-dark text-white" scope="col"><%= t('show.cns') %></th>
            <th class=" bg-dark text-white" scope="col"><%= t('show.data_nascimento') %></th>
            <th class=" bg-dark text-white" scope="col"><%= t('show.status') %></th>
            <th class=" bg-dark text-white"></th>
          </tr>
        </thead>
        <tbody>
          <% @cidadaos.each do |cidadao| %>
            <tr onclick="location.href='<%= cidadao_path(cidadao) %>'">
              <th scope="row"></th>
                <td><%= cidadao.nome_completo %></td>
                <td><%= (CPF.new(cidadao.cpf).formatted) %></td>
                <td><%= (cidadao.cns) %></td>
                <td><%= l(cidadao.data_nascimento, format: :default) %></td>
                <td><%= cidadao.status? ? 'Ativo' : 'Inativo' %></th>
                <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
