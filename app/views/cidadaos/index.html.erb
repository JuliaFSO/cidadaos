<div class="container">
  <div class="d-flex justify-content-around align-items-center mb-3">
    <div class="p-2"><%=image_tag "logo.png", style:'height:150px; width:auto;' %></div>
    <div class="p-2"><h1 class="text-center mt-2"><%= t('new.title') %></h1></div>
    <div class="p-2"><a class="btn btn-home" href="/cidadaos/new" role="button"><%= t('index.add_new') %></a></div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"><%= t('show.nome_completo') %></th>
        <th scope="col"><%= t('show.cpf') %></th>
        <th scope="col"><%= t('show.cns') %></th>
        <th scope="col"><%= t('show.data_nascimento') %></th>
        <th scope="col"><%= t('show.status') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cidadaos.each do |cidadao| %>
          <tr onclick="location.href='<%= cidadao_path(cidadao) %>'">
              <th scope="row"></th>
                <td><%= cidadao.nome_completo %></td>
                <td><%= (CPF.new(cidadao.cpf).formatted) %></td>
                <td><%= (cidadao.cns) %></td>
                <td><%= l(cidadao.data_nascimento, format: :default) %></td>
                <td><%= cidadao.status? ? 'Ativo' : 'Inativo' %></th>
                <td></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
