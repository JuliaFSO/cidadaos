  <div class="d-flex justify-content-center align-items-center mb-3">
    <div class="pt-2 mr-3"><%=image_tag "logo.png", style:'height:150px; width:auto;' %></div>
    <div class="p-2 ml-3"><h1 class="text-center mt-2"><%= t('show.title') %></h1></div>
  </div>

<div class="container my-4">
  <div class="row">
    <div class="col-sm-3 text-center">
      <% if @cidadao.foto.present? %>
        <%= cl_image_tag @cidadao.foto.key, style:'height: 150px; width: 150px; border-radius: 50%;' %>
      <% else %>
        <%= image_tag "avatar.png", style:'height: 150px; width: 150px; border-radius: 50%;' %>
      <% end %>
    </div>
    <div class="col-sm-9">
      <h4><%= t('form.title.personal') %></h4>
      <div class="row row-cols-3">
        <div class="col"><h5><%= t('show.nome_completo') %></h5><p><%= @cidadao.nome_completo %></p></div>
        <div class="col"><h5><%= t('show.cpf') %></h5><p><%= (CPF.new(@cidadao.cpf).formatted) %></p></div>
        <div class="col"><h5><%= t('show.cns') %></h5><p><%= @cidadao.cns %></p></div>
      </div>
      <div class="row row-cols-3">
        <div class="col"><h5><%= t('show.data_nascimento') %></h5><p><%= l(@cidadao.data_nascimento, format: :default) %></p></div>
        <div class="col"><h5><%= t('show.telefone') %></h5><p><%= Phonelib.parse(@cidadao.telefone) %></p></div>
        <div class="col"><h5><%= t('show.email') %></h5><p><%= @cidadao.email %></p></div>
      </div>
      <div class="row row-cols-3">
        <div class="col"><h5><%= t('show.status') %></h5><p><%= @cidadao.status? ? 'Ativo' : 'Inativo' %></p></div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
      <hr>
      <h4><%= t('form.title.address') %></h4>
      <div class="row">
        <div class="col-sm"><h5><%= t('show.logradouro') %></h5><p><%= @cidadao.endereco.logradouro %></p></div>
        <div class="col-sm"><h5><%= t('show.complemento') %></h5><p><%= @cidadao.endereco.complemento %></p></div>
        <div class="col-sm"><h5><%= t('show.bairro') %></h5><p><%= @cidadao.endereco.bairro %></p></div>
      </div>
      <div class="row">
        <div class="col-sm"><h5><%= t('show.cidade') %></h5><p><%= @cidadao.endereco.cidade %></p></div>
        <div class="col-sm"><h5><%= t('show.uf') %></h5><p><%= @cidadao.endereco.uf %></p></div>
        <div class="col-sm"><h5><%= t('show.cep') %></h5><p><%= @cidadao.endereco.cep %></p></div>
      </div>
  <div class="d-flex flex-row justify-content-between mt-3">
      <a class="btn btn-home m-3" href='<%= edit_cidadao_path(@cidadao) %>' role="button"><%= t('show.edit') %></a>
      <a class="btn btn-home m-3" href="/cidadaos/" role="button"><%= t('show.list') %></a>
  </div>
    </div>
  </div>
</div>
